<Window x:Class="WPFTutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTutorial"
        xmlns:models="clr-namespace:WPFTutorial.ModelObject"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400" Background="Black" Loaded="Window_Loaded">
    <Window.Resources>
        <DataTemplate DataType="{x:Type models:MyModelObject}">
            <DockPanel Background="Yellow"/>
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="MainGrid">
        <StackPanel>
            <Button x:Name="button1" Content="{Binding Name}" Width="{Binding NameWidth}"/>
            <Button x:Name="button2" Content="{Binding Age}"/>
        </StackPanel>
    </Grid>
</Window>
